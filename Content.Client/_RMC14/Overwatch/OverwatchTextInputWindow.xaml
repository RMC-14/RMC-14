<controls:OverwatchTextInputWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Overwatch"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    Title="Squad Message" MinSize="480 104">
    <PanelContainer>
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat
            BorderColor="#3A3A3A"
            BorderThickness="1"
            BackgroundColor="#1A1A1A" />
        </PanelContainer.PanelOverride>
        <BoxContainer Orientation="Vertical" Margin="5">
            <LineEdit Name="MessageBox" Access="Public" Margin="0 0 0 5" />
            <BoxContainer Orientation="Horizontal">
                <Button Name="OkButton" Access="Public" Text="Ok" HorizontalExpand="True" StyleClasses="OpenBoth" />
                <Button Name="CancelButton" Access="Public" Text="Cancel" HorizontalExpand="True" StyleClasses="OpenBoth" />
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</controls:OverwatchTextInputWindow>
