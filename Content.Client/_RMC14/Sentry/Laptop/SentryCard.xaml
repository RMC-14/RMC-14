<Control xmlns="https://spacestation14.io"
         xmlns:controls="clr-namespace:Content.Client._RMC14.Sentry.Laptop"
         xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
         xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls">
    <PanelContainer MinHeight="240" Margin="0 0 0 8">
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="#0A1520"
                                   BorderColor="#4AA3E8" BorderThickness="1" />
        </PanelContainer.PanelOverride>
        <BoxContainer Orientation="Vertical" Margin="10">
            <BoxContainer Orientation="Horizontal" Margin="0 0 0 8">
                <RichTextLabel Name="SentryName" Access="Public"
                             Text="[color=#88C7FA][bold]UN 571-C Sentry Gun[/bold][/color]"
                             VerticalAlignment="Center"
                             HorizontalExpand="True"/>
                <RichTextLabel Name="SentryStatus" Access="Public"
                             Text="[color=#229132][ONLINE][/color]"
                             VerticalAlignment="Center"
                             Margin="5 0 0 0"/>
            </BoxContainer>

            <BoxContainer Orientation="Horizontal" Margin="0 0 0 8">
                <Label Text="NAME:" MinWidth="60" FontColorOverride="#88C7FA" VerticalAlignment="Center"/>
                <LineEdit Name="NameLineEdit" Access="Public"
                         HorizontalExpand="True"
                         Margin="5 0 0 0"
                         PlaceHolder="Enter custom name..."/>
            </BoxContainer>

            <cc:HSeparator Color="#4AA3E8" Margin="0 0 0 8"/>

            <BoxContainer Orientation="Horizontal" Margin="0 0 0 8">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="0 0 5 0">
                    <BoxContainer Orientation="Horizontal" Margin="0 3">
                        <Label Text="HEALTH" MinWidth="70" FontColorOverride="#88C7FA" VerticalAlignment="Center"/>
                        <ProgressBar Name="HealthBar" Access="Public"
                                   MinSize="160 20"
                                   MaxSize="160 20"
                                   MinValue="0"
                                   MaxValue="1"
                                   Value="1.0"
                                   VerticalAlignment="Center"
                                   HorizontalExpand="True"
                                   Margin="5 0"/>
                        <Label Name="HealthLabel" Access="Public"
                              Text="100/100"
                              MinWidth="60"
                              FontColorOverride="#88C7FA"
                              VerticalAlignment="Center"/>
                    </BoxContainer>

                    <BoxContainer Orientation="Horizontal" Margin="0 3">
                        <Label Text="AMMO" MinWidth="70" FontColorOverride="#88C7FA" VerticalAlignment="Center"/>
                        <ProgressBar Name="AmmoBar" Access="Public"
                                   MinSize="160 20"
                                   MaxSize="160 20"
                                   MinValue="0"
                                   MaxValue="1"
                                   Value="1.0"
                                   VerticalAlignment="Center"
                                   HorizontalExpand="True"
                                   Margin="5 0"/>
                        <Label Name="AmmoLabel" Access="Public"
                              Text="500/500"
                              MinWidth="60"
                              FontColorOverride="#88C7FA"
                              VerticalAlignment="Center"/>
                    </BoxContainer>

                    <BoxContainer Orientation="Horizontal" Margin="0 3">
                        <Label Text="MODE" MinWidth="70" FontColorOverride="#88C7FA" VerticalAlignment="Center"/>
                        <RichTextLabel Name="ModeLabel" Access="Public" Text="[color=#229132]Active[/color]" VerticalAlignment="Center" Margin="5 0"/>
                    </BoxContainer>
                </BoxContainer>

                <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="5 0 0 0">
                    <BoxContainer Orientation="Horizontal" Margin="0 3">
                        <Label Text="LOCATION" MinWidth="80" FontColorOverride="#88C7FA" VerticalAlignment="Center"/>
                        <Label Name="LocationLabel" Access="Public" Text="Unknown" VerticalAlignment="Center" Margin="5 0"/>
                    </BoxContainer>

                    <BoxContainer Orientation="Horizontal" Margin="0 3">
                        <Label Text="TARGET" MinWidth="80" FontColorOverride="#88C7FA" VerticalAlignment="Center"/>
                        <RichTextLabel Name="TargetLabel" Access="Public" Text="[color=#B0B0B0]None[/color]" VerticalAlignment="Center" Margin="5 0"/>
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>

            <cc:HSeparator Color="#4AA3E8" Margin="0 5"/>

            <BoxContainer Orientation="Vertical" Margin="0 5 0 0">
                <BoxContainer Orientation="Horizontal" Margin="0 0 0 5">
                    <Button Name="IFFExpandButton" Access="Public"
                            Text="â–º"
                            SetWidth="24"
                            SetHeight="24"
                            VerticalAlignment="Center"/>
                    <Label Text="IFF TARGETING CONTROLS" FontColorOverride="#88C7FA" VerticalAlignment="Center" Margin="5 0 0 0" HorizontalExpand="True"/>
                    <controls:SentryButton Name="ResetTargetingButton" Access="Public"
                                         BackgroundColor="#1A3D5C"
                                         BorderColor="#88C7FA" BorderThickness="1"
                                         Text="RESET TO DEFAULT" />
                </BoxContainer>

                <PanelContainer Name="IFFPanel" Access="Public" MinHeight="120" MaxHeight="120" Visible="False">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="#050A0F"
                                               BorderColor="#4AA3E8" BorderThickness="1" />
                    </PanelContainer.PanelOverride>
                    <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
                        <GridContainer Name="FactionContainer"
                                       Access="Public"
                                       Columns="3"
                                       Margin="5"
                                       HorizontalExpand="True"/>
                    </ScrollContainer>
                </PanelContainer>
            </BoxContainer>

            <cc:HSeparator Color="#4AA3E8" Margin="0 8 0 8"/>

            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right">
                <controls:SentryButton Name="TogglePowerButton" Access="Public"
                                     Margin="0 0 5 0"
                                     BackgroundColor="#1A3D5C"
                                     BorderColor="#88C7FA" BorderThickness="1"
                                     Text="TOGGLE POWER" />
                <controls:SentryButton Name="ViewButton" Access="Public"
                                     Margin="0 0 5 0"
                                     BackgroundColor="#1A3D5C"
                                     BorderColor="#88C7FA" BorderThickness="1"
                                     Text="VIEW CAM" />
                <controls:SentryButton Name="UnlinkButton" Access="Public"
                                     BackgroundColor="#5C1A1A"
                                     BorderColor="#A42625" BorderThickness="1"
                                     Text="UNLINK" />
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</Control>
