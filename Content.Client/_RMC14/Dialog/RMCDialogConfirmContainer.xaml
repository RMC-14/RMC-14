<controls:RMCDialogConfirmContainer
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Dialog"
    MinSize="300 100" Orientation="Vertical" Margin="5">
    <Control VerticalExpand="True" MinHeight="5" />
    <RichTextLabel Name="MessageLabel" Access="Public" />
    <BoxContainer Orientation="Horizontal" Margin="0 5 0 0">
        <Control HorizontalExpand="True" />
        <Button Text="No" Name="CancelButton" Access="Public" StyleClasses="OpenBoth" MinWidth="100" Margin="0 0 20 0" />
        <Button Text="Yes" Name="OkButton" Access="Public" StyleClasses="OpenBoth" MinWidth="100" />
        <Control HorizontalExpand="True" />
    </BoxContainer>
    <Control VerticalExpand="True" MinHeight="5" />
</controls:RMCDialogConfirmContainer>
