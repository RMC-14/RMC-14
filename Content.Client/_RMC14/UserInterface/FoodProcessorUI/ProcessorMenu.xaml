<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:ui1="clr-namespace:Content.Client.Kitchen.UI"
    Title="{Loc processor-menu-title}" MinSize="468 256">
    
    <BoxContainer Orientation="Horizontal">
        <BoxContainer Orientation="Vertical" VerticalAlignment="Center" Margin="8" MinWidth="100">
            <Label Text="{Loc processor-menu-confirmation-text}" HorizontalAlignment="Center" Margin="0 0 0 18"/>
            <Button
                Name="StartButton"
                Text="{Loc processor-menu-process-button}"
                TextAlign="Center"
                MinSize="64 48"
                Margin="0 0 0 32"
                Access="Public"
                />
        </BoxContainer>

        <ui1:LabelledContentBox
            Name="ChamberContentBox"
            LabelText="{Loc processor-menu-chamber-content-box-label}"
            ButtonText="{Loc processor-menu-chamber-content-box-button}"
            VerticalExpand="True"
            HorizontalExpand="True"
            Margin="8"
            SizeFlagsStretchRatio="2"
            />

    </BoxContainer>

    <PanelContainer Name="DisableCookingPanelOverlay" MouseFilter="Stop">
        <PanelContainer.PanelOverride>
            <gfx:StyleBoxFlat BackgroundColor="#1B1B1E66" />
        </PanelContainer.PanelOverride>
    </PanelContainer>
</controls:FancyWindow>
