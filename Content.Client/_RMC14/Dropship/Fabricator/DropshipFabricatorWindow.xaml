<controls:DropshipFabricatorWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Dropship.Fabricator"
    xmlns:ui="clr-namespace:Content.Client._RMC14.UserInterface"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    Title="{Loc 'rmc-dropship-fabricator-title'}"
    MinSize="950 450">
    <PanelContainer>
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat 
                BorderColor="#3A3A3A" 
                BorderThickness="1" 
                BackgroundColor="#1A1A1A" />
        </PanelContainer.PanelOverride>
        <BoxContainer Orientation="Vertical" Margin="4">
            <PanelContainer HorizontalExpand="True" Margin="0 0 0 8">
                <PanelContainer.PanelOverride>
                    <graphics:StyleBoxFlat 
                        BorderColor="#3A3A3A" 
                        BorderThickness="0 0 0 1" 
                        BackgroundColor="#252525" />
                </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Vertical" Margin="4">
                    <RichTextLabel Text="{Loc 'rmc-dropship-fabricator-title'}" HorizontalAlignment="Center" />
                    <Label Name="PointsLabel" Access="Public" Margin="4 2" HorizontalAlignment="Center" />
                </BoxContainer>
            </PanelContainer>
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True">
                <PanelContainer HorizontalExpand="True" Margin="0 0 4 0">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat 
                            BorderColor="#3A3A3A" 
                            BorderThickness="1" 
                            BackgroundColor="#252525" />
                    </PanelContainer.PanelOverride>
                    <BoxContainer Orientation="Vertical" Margin="4">
                        <RichTextLabel Name="EquipmentLabel" Access="Public" />
                        <ui:BlueHorizontalSeparator />
                        <ScrollContainer HScrollEnabled="False" VScrollEnabled="True" VerticalExpand="True">
                            <BoxContainer Name="EquipmentContainer" Access="Public" Orientation="Vertical"
                                        VerticalAlignment="Top" />
                        </ScrollContainer>
                    </BoxContainer>
                </PanelContainer>
                <PanelContainer HorizontalExpand="True" Margin="4 0 0 0">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat 
                            BorderColor="#3A3A3A" 
                            BorderThickness="1" 
                            BackgroundColor="#252525" />
                    </PanelContainer.PanelOverride>
                    <BoxContainer Orientation="Vertical" Margin="4">
                        <RichTextLabel Name="AmmoLabel" Access="Public" />
                        <ui:BlueHorizontalSeparator />
                        <ScrollContainer HScrollEnabled="False" VScrollEnabled="True" VerticalExpand="True">
                            <BoxContainer Name="AmmoContainer" Access="Public" Orientation="Vertical"
                                        VerticalAlignment="Top" />
                        </ScrollContainer>
                    </BoxContainer>
                </PanelContainer>
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</controls:DropshipFabricatorWindow>