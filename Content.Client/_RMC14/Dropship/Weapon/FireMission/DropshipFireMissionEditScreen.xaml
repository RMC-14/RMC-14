<controls:DropshipFireMissionEditScreen
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Dropship.Weapon.FireMission"
    MinSize="500 500">

    <BoxContainer Orientation="Vertical" HorizontalExpand="True"
                  VerticalExpand="True" SeparationOverride="4" Margin="10">

        <!-- Mission title -->
        <RichTextLabel Name="FireMissionTitle" Text="[color=#00FF36]FireMission: Attack one[/color]"
                       HorizontalAlignment="Center" MinSize="0 30"/>

        <!-- Weapon info -->
        <BoxContainer Orientation="Vertical" SeparationOverride="2">
            <BoxContainer Orientation="Horizontal" SeparationOverride="2">
                <RichTextLabel Text="[color=#00FF36]Weapon[/color]" HorizontalAlignment="Right" MinSize="80 18"/>
                <RichTextLabel Name="WeaponName" HorizontalAlignment="Center" HorizontalExpand="True"/>
            </BoxContainer>

            <BoxContainer Orientation="Horizontal" SeparationOverride="2">
                <RichTextLabel Text="[color=#00FF36]Ammunition[/color]" HorizontalAlignment="Right" MinSize="80 18"/>
                <RichTextLabel Name="WeaponAmmoCount" HorizontalAlignment="Center" HorizontalExpand="True"/>
            </BoxContainer>

            <BoxContainer Orientation="Horizontal" SeparationOverride="2">
                <RichTextLabel Text="[color=#00FF36]Gimbals[/color]" HorizontalAlignment="Right" MinSize="80 18"/>
                <RichTextLabel Name="WeaponGimbals" HorizontalAlignment="Center" HorizontalExpand="True"/>
            </BoxContainer>

            <BoxContainer Orientation="Horizontal" SeparationOverride="2">
                <RichTextLabel Text="[color=#00FF36]Fire Delay[/color]" HorizontalAlignment="Right" MinSize="80 18"/>
                <RichTextLabel Name="WeaponFireDelay" HorizontalAlignment="Center" HorizontalExpand="True"/>
            </BoxContainer>
        </BoxContainer>

        <!-- Vertical container for all offset rows -->
        <BoxContainer Name="FireMissionRows" Orientation="Vertical" SeparationOverride="2" HorizontalExpand="True">
        </BoxContainer>
    </BoxContainer>
</controls:DropshipFireMissionEditScreen>
