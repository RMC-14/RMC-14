<controls:DropshipFireMissionCreateScreen
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Dropship.Weapon.FireMission"
    MinSize="500 500">

    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True"
                  SeparationOverride="10"
                  Margin="20">

        <!-- Title -->
        <Label Text="Create Fire Mission"
               HorizontalAlignment="Center"
               MinSize="0 30"
               ModulateSelfOverride="#00FF36"/>

        <!-- Fire Mission Name Input -->
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" SeparationOverride="5">
            <Label Text="FireMission Name:" HorizontalAlignment="Center" ModulateSelfOverride="#00FF36"/>
            <LineEdit Name="FireMissionNameInput" HorizontalExpand="True" MinSize="200 24" ModulateSelfOverride="#00FF36"/>
        </BoxContainer>

        <!-- Existing Fire Missions Label -->
        <Label Text="Existing Fire Missions" HorizontalAlignment="Center" MinSize="0 24" ModulateSelfOverride="#00FF36"/>

        <!-- Fire Missions List -->
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Name="FireMissionsScroll">
            <BoxContainer Orientation="Vertical"
                          HorizontalExpand="True"
                          SeparationOverride="4"
                          Name="FireMissionsListContainer">
            </BoxContainer>
        </ScrollContainer>

    </BoxContainer>
</controls:DropshipFireMissionCreateScreen>
