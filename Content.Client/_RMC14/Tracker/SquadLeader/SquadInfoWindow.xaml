<controls:SquadInfoWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Tracker.SquadLeader"
    xmlns:ui="clr-namespace:Content.Client._RMC14.UserInterface"
    Title="{Loc rmc-squad-info-title}" MinSize="680 675">
    <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Orientation="Vertical">
            <BoxContainer Orientation="Horizontal">
                <RichTextLabel Name="SquadLeaderLabel" Access="Public" />
                <Control HorizontalExpand="True" />
                <Button Name="ChangeTrackerButton" Access="Public"
                        Text="{Loc rmc-squad-info-change-tracker}" StyleClasses="OpenBoth" />
            </BoxContainer>
            <ui:BlueHorizontalSeparator />
            <RichTextLabel Text="{Loc rmc-squad-info-fireteams}" Margin="0 10 0 0" />
            <ui:BlueHorizontalSeparator />
            <BoxContainer Name="FireteamsContainer" Access="Public" Orientation="Vertical" Margin="0 10 0 0" />
            <BoxContainer Name="UnassignedContainer" Access="Public" Orientation="Vertical" />
        </BoxContainer>
    </ScrollContainer>
</controls:SquadInfoWindow>
