<?xml version="1.0" encoding="utf-8"?>
<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="Photocopier"
    MinSize="380 220">
    <BoxContainer Orientation="Horizontal">
        <PanelContainer MinWidth="600" HorizontalExpand="True">
          <PanelContainer.PanelOverride/>
            <graphics:StyleBoxFlat BackgroundColor="#05090F"
                                   BorderColor="#88C7FA" BorderThickness="2" />
            <!-- Paper Status -->
            <BoxContainer Orientation="Horizontal" Margin="2">
                <Label Text="Paper"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
                <Label Name="PaperStatusLabel"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <Button Name="EjectButton"
                        Text="EJECT"
                        StyleClasses="OpenBoth"
                        HorizontalExpand="True"
                        Disabled="True" />
            </BoxContainer>

            <cc:HSeparator Color="#76a5afff"/>

            <!-- Name And Copy -->
            <BoxContainer Orientation="Horizontal" Margin="2">
                <Label Text="NAME"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
                <Label Name="PaperName"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"/>
            </BoxContainer>
            <BoxContainer>
                <Button Name="CopyButton"
                        Text="{Loc 'fax-machine-ui-copy-button'}"
                        StyleClasses="OpenBoth"
                        HorizontalExpand="True"
                        Disabled="True" />
            </BoxContainer>
            <BoxContainer Margin="0 4 0 0">
                <Button Name="Copy2Button"
                        Text="Copy x2"
                        HorizontalExpand="True"
                        StyleClasses="OpenBoth"
                        Disabled="True" />
                <Button Name="Copy3Button"
                        Text="Copy x3"
                        HorizontalExpand="True"
                        StyleClasses="OpenBoth"
                        Disabled="True" />
                <Button Name="Copy5Button"
                        Text="Copy x5"
                        HorizontalExpand="True"
                        StyleClasses="OpenBoth"
                        Disabled="True" />
                <Button Name="Copy10Button"
                        Text="Copy x10"
                        HorizontalExpand="True"
                        StyleClasses="OpenBoth"
                        Disabled="True" />
            </BoxContainer>

            <cc:HSeparator Color="#76a5afff"/>
            <BoxContainer Margin="0 4 0 4">
                <Button Name="PaperButton"
                        Text="{Loc 'fax-machine-ui-paper-button-normal'}"
                        StyleClasses="OpenBoth"
                        HorizontalExpand="True"/>
                <Button Name="FileButton"
                        Text="{Loc 'fax-machine-ui-file-button'}"
                        StyleClasses="OpenBoth"
                        HorizontalExpand="True"/>
            </BoxContainer>
        </PanelContainer>
    </BoxContainer>
</controls:FancyWindow>
