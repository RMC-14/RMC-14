<controls:RMCHardpointMenu
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Vehicle.Ui"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    Title="Hardpoints"
    MinSize="600 420">

    <PanelContainer HorizontalExpand="True" VerticalExpand="True">
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat
                BackgroundColor="#070E18"
                BorderColor="#6BC7FF"
                BorderThickness="2"/>
        </PanelContainer.PanelOverride>

        <BoxContainer Orientation="Vertical" Margin="8" SeparationOverride="6" HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Orientation="Horizontal" SeparationOverride="8" HorizontalExpand="True">
                <PanelContainer MinSize="150 96" VerticalAlignment="Center">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat
                            BackgroundColor="#0D2235"
                            BorderColor="#2D5E8E"
                            BorderThickness="2"/>
                    </PanelContainer.PanelOverride>

                    <PanelContainer Name="VehiclePreview">
                        <SpriteView
                            Name="VehicleIcon"
                            Access="Public"
                            MinSize="136 82"
                            SpriteOffset="True"
                            Stretch="Fit"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="6"/>
                    </PanelContainer>
                </PanelContainer>

                <BoxContainer Orientation="Vertical" SeparationOverride="3" HorizontalExpand="True">
                    <Label Text="Vehicle Hardpoints" StyleClasses="LabelHeading"/>
                    <Label
                        Name="ErrorLabel"
                        Access="Public"
                        Visible="False"
                        FontColorOverride="#FF8C7A"
                        Text=""
                        HorizontalExpand="True"/>
                    <BoxContainer
                        Name="FrameHealthRow"
                        Access="Public"
                        Orientation="Vertical"
                        SeparationOverride="4"
                        Visible="False"
                        HorizontalExpand="True">
                        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="6">
                            <Label Text="Frame Integrity" StyleClasses="LabelSecondary" FontColorOverride="#C7D7EA"/>
                            <Label
                                Name="FrameHealthLabel"
                                Access="Public"
                                StyleClasses="LabelSecondary"
                                FontColorOverride="#6BC7FF"
                                HorizontalAlignment="Right"
                                HorizontalExpand="True"
                                Text="0%"/>
                        </BoxContainer>
                        <ProgressBar
                            Name="FrameHealthBar"
                            Access="Public"
                            MinValue="0"
                            MaxValue="1"
                            Value="0"
                            HorizontalExpand="True"
                            MinSize="0 12">
                            <ProgressBar.ForegroundStyleBoxOverride>
                                <graphics:StyleBoxFlat BackgroundColor="#53D188"/>
                            </ProgressBar.ForegroundStyleBoxOverride>
                        </ProgressBar>
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>

            <PanelContainer HorizontalExpand="True" VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <graphics:StyleBoxFlat
                        BackgroundColor="#0B131F"
                        BorderColor="#1E3450"
                        BorderThickness="1"/>
                </PanelContainer.PanelOverride>

                <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Margin="6">
                    <BoxContainer
                        Name="HardpointList"
                        Access="Public"
                        Orientation="Vertical"
                        SeparationOverride="6"
                        HorizontalExpand="True"/>
                </ScrollContainer>
            </PanelContainer>
        </BoxContainer>
    </PanelContainer>
</controls:RMCHardpointMenu>
