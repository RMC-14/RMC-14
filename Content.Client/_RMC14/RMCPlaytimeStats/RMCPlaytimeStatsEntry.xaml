<ContainerButton xmlns="https://spacestation14.io"
                 xmlns:customControls1="clr-namespace:Content.Client.Administration.UI.CustomControls">
    <PanelContainer Name="BackgroundColorPanel"/>
    <BoxContainer Orientation="Horizontal"
                  HorizontalExpand="True"
                  SeparationOverride="4">
       <PanelContainer MinSize="48 0" MaxSize="48 0" VerticalAlignment="Stretch" HorizontalAlignment="Center">
           <TextureRect Name="IconTexture"
                        Visible="False"
                        Stretch="KeepAspectCentered"
                        SetSize="40 40"
                        Margin="0"/>
       </PanelContainer>
        <Label Name="RoleLabel"
               SizeFlagsStretchRatio="3"
               HorizontalExpand="True"
               ClipText="True"
               Margin="5,5,5,5"/>
        <customControls1:VSeparator/>
        <Label Name="PlaytimeLabel"
               SizeFlagsStretchRatio="3"
               HorizontalExpand="True"
               ClipText="True"
               Margin="5,5,5,5"/>
    </BoxContainer>
</ContainerButton>
