<controls:LifeboatComputerWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Marines.Lifeboat"
    Title="Confirm?" MinSize="400 200">
    <BoxContainer Orientation="Vertical">
        <Label Text="{Loc 'rmc-marines-lifeboat-ui-launch-question'}" />
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="EmergencyLaunchButton" Access="Public" Text="{Loc 'rmc-marines-lifeboat-ui-emergency-launch'}"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="NoButton" Access="Public" Text="{Loc 'rmc-marines-lifeboat-ui-no'}"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="YesButton" Access="Public" Text="{Loc 'rmc-marines-lifeboat-ui-yes'}"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>
</controls:LifeboatComputerWindow>
