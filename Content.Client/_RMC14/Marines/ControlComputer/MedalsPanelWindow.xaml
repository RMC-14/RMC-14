<controls:MedalsPanelWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Marines.ControlComputer"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    Title="Medals Panel"
    MinSize="600 500">
    <PanelContainer>
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat 
                BorderColor="#3A3A3A" 
                BorderThickness="1" 
                BackgroundColor="#141414" />
        </PanelContainer.PanelOverride>
        <BoxContainer Orientation="Vertical" Margin="8" SeparationOverride="6">
            <PanelContainer HorizontalExpand="True">
                <PanelContainer.PanelOverride>
                    <graphics:StyleBoxFlat 
                        BackgroundColor="#252525"
                        BorderColor="#3A3A3A" 
                        BorderThickness="0 0 0 2" />
                </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Vertical" Margin="6 4">
                    <RichTextLabel 
                        Text="Medals Panel" 
                        HorizontalAlignment="Center"
                        StyleClasses="LabelTitle" />
                </BoxContainer>
            </PanelContainer>
            <PanelContainer HorizontalExpand="True">
                <PanelContainer.PanelOverride>
                    <graphics:StyleBoxFlat 
                        BackgroundColor="#1F1F1F"
                        BorderColor="#3A3A3A" 
                        BorderThickness="1" />
                </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Vertical" Margin="8">
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True" HorizontalAlignment="Center">
                        <Button Name="GrantNewMedalButton" Access="Public" Text="Выдать новую медаль" StyleClasses="OpenBoth" />
                    </BoxContainer>
                </BoxContainer>
            </PanelContainer>
            <ScrollContainer Name="RecommendationsContainer" Access="Public" VerticalExpand="True" HScrollEnabled="False" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" Name="RecommendationsList" Access="Public" HorizontalExpand="True" SeparationOverride="6" />
            </ScrollContainer>
        </BoxContainer>
    </PanelContainer>
</controls:MedalsPanelWindow>
