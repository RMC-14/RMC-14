<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls;assembly=Content.Client"
                      Title="Encoder">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Text="Challenge Code:" />
        <Label Name="WordLabel" Text="" Margin="0,0,0,10" />

        <Label Text="Offset:" />
        <Label Name="OffsetLabel" Text="0" Margin="0,0,0,10" />

        <BoxContainer Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="DecreaseOffsetButton" Text="&lt;" />
            <Button Name="IncreaseOffsetButton" Text="&gt;" />
        </BoxContainer>

        <Button Name="SubmitButton" Text="Submit Encoding" Margin="0,0,0,10" />

        <Label Text="Last Submitted Code:" />
        <Label Name="LastSubmittedCodeLabel" Text="None" Margin="0,0,0,10" />

        <Label Text="Known Letters of PONG:" />
        <Label Name="KnownLettersLabel" Text="0" Margin="0,0,0,10" />
    </BoxContainer>
</controls:FancyWindow>

