<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls;assembly=Content.Client"
                      Title="Cipher">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Text="Input Code:" />
        <Label Name="InputCodeLabel" Text="" Margin="0,0,0,10" />
        <BoxContainer Name="LetterAdjustContainer" Orientation="Horizontal" Margin="0,0,0,10" />
        <BoxContainer Orientation="Horizontal" Margin="0,5,0,10">
            <Button Name="DecreaseButton" Text="&lt;" />
            <Label Name="SettingLabel" Text="0" HorizontalAlignment="Center" MinWidth="50" />
            <Button Name="IncreaseButton" Text="&gt;" />
        </BoxContainer>

        <Label Text="Deciphered Word:" />
        <Label Name="WordLabel" Text="" Margin="0,0,0,10" />

        <Label Name="ValidLabel" Text="Valid Word: No" Margin="0,0,0,10" />

        <Button Name="PrintButton" Text="Print Punchcard" Margin="0,0,0,10" />

        <Button Name="RefillButton" Text="Refill from Stack" Margin="0,0,0,10" />

        <Label Name="PunchcardCountLabel" Text="Punchcards: 10" Margin="0,0,0,10" />

        <Label Text="Status:" />
        <Label Name="StatusLabel" Text="Ready for input" />
    </BoxContainer>
</controls:FancyWindow>
