<controls:RequisitionsOrderCategoriesView
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Requisitions"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls">
    <BoxContainer Orientation="Vertical">
        <RichTextLabel Name="BudgetLabel" Access="Public" />
        <Button Name="MainMenuButton" Access="Public" Text="{Loc rmc-requisitions-main-menu}" StyleClasses="ButtonSquare" />
        <cc:HSeparator Color="#4972A1" Margin="0 5" />
        <Control MinWidth="5" />
        <Button Name="SearchMenuButton" Access="Public" Text="{Loc rmc-requisitions-search-item}" StyleClasses="ButtonSquare" />
        <Control MinWidth="5" />
        <RichTextLabel Name="CategoryHeaderLabel" Access="Public" Margin="0 0 0 5" />
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Name="CategoriesContainer" Access="Public" Orientation="Vertical" />
        </ScrollContainer>
    </BoxContainer>
</controls:RequisitionsOrderCategoriesView>
