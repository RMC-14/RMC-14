<controls:RMCChemMasterReagentRow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Chemistry.Master"
    xmlns:ui="clr-namespace:Content.Client._RMC14.UserInterface">
    <BoxContainer Orientation="Horizontal">
        <Label Name="ReagentLabel" Access="Public" />
        <Control HorizontalExpand="True" />
        <BoxContainer Name="TransferSettingsContainer" Access="Public" />
        <ui:RMCResettableButton Name="AllButton" Access="Public" StyleClasses="OpenBoth"
                                Text="{Loc rmc-chem-master-all}" />
        <LineEdit Name="CustomEdit" Access="Public" MinWidth="75"
                  PlaceHolder="{Loc rmc-chem-master-custom}" />
    </BoxContainer>
</controls:RMCChemMasterReagentRow>
