<cc:XenoEvolutionWindow
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client._RMC14.Xenonids.Evolution"
    xmlns:userInterface="clr-namespace:Content.Client._RMC14.UserInterface"
    Title="{Loc cm-xeno-available-evolutions}"
    MinSize="300 300">
    <ScrollContainer HScrollEnabled="False" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Orientation="Vertical" Margin="4">
            <Label Name="PointsLabel" Access="Public" Text="Evolution points:" 
                   StyleClasses="LabelBold" HorizontalExpand="True" HorizontalAlignment="Center" />
            <RichTextLabel Name="OvipositorNeededLabel" Access="Public" 
                           HorizontalExpand="True" HorizontalAlignment="Center" Margin="0 4" />
            <BoxContainer Orientation="Vertical" Name="EvolutionsContainer" Access="Public" />
            <userInterface:BlueHorizontalSeparator Name="Separator" Access="Public" 
                           Visible="false" Margin="4 8" />
            <Label Name="StrainsLabel" Access="Public" Text="Strains:" 
                   StyleClasses="LabelBold" HorizontalExpand="True" HorizontalAlignment="Center" />
            <BoxContainer Orientation="Vertical" Name="StrainsContainer" Access="Public" />
        </BoxContainer>
    </ScrollContainer>
</cc:XenoEvolutionWindow>
