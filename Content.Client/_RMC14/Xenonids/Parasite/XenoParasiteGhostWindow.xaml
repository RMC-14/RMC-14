<controls:XenoParasiteGhostWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Xenonids.Parasite"
    Title="Confirmation"
    MinSize="410 150">
    <BoxContainer Orientation="Vertical">
        <Label Text ="{Loc 'rmc-xeno-egg-ghost-confirm'}" Align="Center"/>
        <Control VerticalExpand="True"/>
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="10" Margin="5 5 10 5">
            <Button Name="ConfirmButton" Access="Public" MinHeight="35" Text="Yes" HorizontalAlignment="Right"/>
            <Control HorizontalExpand="True"/>
            <Button Name="DenyButton" Access="Public" MinHeight="35" Text="No" StyleClasses="ButtonColorDefaultRed" HorizontalAlignment="Left"/>
        </BoxContainer>
    </BoxContainer>
</controls:XenoParasiteGhostWindow>