<controls:StaffHelpWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Mentor"
    Title="Admin and Mentor Help">
    <BoxContainer Orientation="Vertical">
        <RichTextLabel Text="{Loc 'rmc-mentor-adminhelp'}" />
        <Button Name="AdminHelpButton" Access="Public" Text="Admin Help" StyleClasses="OpenBoth" />
        <RichTextLabel Text="{Loc 'rmc-mentor-mentorhelp'}" Margin="0 20 0 0" />
        <Button Name="MentorHelpButton" Access="Public" Text="Mentor Help" StyleClasses="OpenBoth" />
    </BoxContainer>
</controls:StaffHelpWindow>
