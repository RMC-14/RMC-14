<controls:StaffHelpWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Mentor"
    Title="{Loc rmc-mentor-help-window-title}">
    <BoxContainer Orientation="Vertical">
        <RichTextLabel Text="{Loc rmc-mentor-admin-help-desc}" />
        <Button Name="AdminHelpButton" Access="Public" Text="{Loc rmc-mentor-admin-help}" StyleClasses="OpenBoth" />
        <RichTextLabel Text="{Loc rmc-mentor-mentor-help-desc}" Margin="0 20 0 0" />
        <Button Name="MentorHelpButton" Access="Public" Text="{Loc rmc-mentor-mentor-help}" StyleClasses="OpenBoth" />
    </BoxContainer>
</controls:StaffHelpWindow>
