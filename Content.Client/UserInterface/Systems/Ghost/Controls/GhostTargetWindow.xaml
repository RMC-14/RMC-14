<DefaultWindow xmlns="https://spacestation14.io" Title="{Loc 'ghost-target-window-title'}" MinSize="550 450" SetSize="550 450">
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True">
        <ScrollContainer Name="CategoryScroll" HorizontalExpand="True" SizeFlagsStretchRatio="1" VerticalExpand="True" HScrollEnabled="False" Margin="0 75 0 0">
            <BoxContainer Name="CategoryContainer" Orientation="Vertical" SeparationOverride="5" HorizontalExpand="True" >
                <!-- Category buttons get added here by code -->
            </BoxContainer>
        </ScrollContainer>
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" SizeFlagsStretchRatio="3" Margin="4 0 0 0">
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="0 4">
                <Control HorizontalExpand="True" />
                <Button Name="GhostnadoButton" Text="{Loc 'ghost-target-window-warp-to-most-followed'}" HorizontalAlignment="Center" />
                <Control HorizontalExpand="True">
                    <Button Name="SortOrderButton" HorizontalAlignment="Right" />
                </Control>
            </BoxContainer>
            <LineEdit Name="SearchBar" PlaceHolder="Search" HorizontalExpand="True" Margin="0 4" />
            <ScrollContainer Name="GhostScroll" VerticalExpand="True" HorizontalExpand="True" HScrollEnabled="False">
                <BoxContainer Name="ButtonContainer" Orientation="Vertical" VerticalExpand="True" SeparationOverride="5">
                    <!-- Target buttons get added here by code -->
                </BoxContainer>
            </ScrollContainer>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
